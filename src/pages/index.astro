---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Web Tools" description="ブラウザで使える便利なツール集">
	<main class="max-w-4xl mx-auto px-6 py-12">
		<h1 class="text-2xl font-normal mb-12 text-(--text)">Web Tools</h1>

		<section>
			<div class="grid gap-6 md:grid-cols-2">
				<a href="/c-img/" class="group border-2 border-(--border) rounded-lg p-8 hover:border-(--text) transition-colors">
					<div class="flex items-start gap-4">
						<svg class="w-10 h-10 text-(--muted) group-hover:text-(--text) transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
						</svg>
						<div>
							<h2 class="text-lg font-medium mb-2 text-(--text)">画像変換</h2>
							<p class="text-sm text-(--muted)">JPEG/PNG画像をWebPやAVIFに変換</p>
						</div>
					</div>
				</a>

				<a href="/c-video/" class="group border-2 border-(--border) rounded-lg p-8 hover:border-(--text) transition-colors">
					<div class="flex items-start gap-4">
						<svg class="w-10 h-10 text-(--muted) group-hover:text-(--text) transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14m-6 0h.01M4 6h9a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2z" />
						</svg>
						<div>
							<h2 class="text-lg font-medium mb-2 text-(--text)">動画サイズ変換</h2>
							<p class="text-sm text-(--muted)">動画のサイズと形式を変換</p>
						</div>
					</div>
				</a>
			</div>
		</section>
	</main>
</Layout>

<style>
	a {
		text-decoration: none;
		color: inherit;
	}
</style>