---
import "../styles/global.css";

const base = import.meta.env.BASE_URL;
const {
    title: pageTitle,
    description: pageDescription,
    image: pageImage,
    noindex,
    twitter: twitterHandle,
    siteName: pageSiteName,
    themeColor: pageThemeColor,
} = Astro.props as Record<string, string | boolean | undefined>;

const title = (pageTitle as string) ?? "WebP/AVIFに変換しよう";
const description =
    (pageDescription as string) ??
    "JPEG/PNG画像をWebPやAVIFへブラウザで簡単変換。品質も選べて、まとめてダウンロードできます。";
const socialImage = (pageImage as string) ?? `${base}favicon/android-chrome-512x512.png`;
const siteName = (pageSiteName as string) ?? "AVIF/WebP Converter";
const themeColor = (pageThemeColor as string) ?? "#f3f4f6";
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).href : undefined;
const shouldIndex = !(noindex === true);
const twitter = (twitterHandle as string) ?? "@ksw1024_studio";
const author = "かすわら / Kaito Saida";
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Primary Meta -->
    <meta name="description" content={description} />
    <meta name="robots" content={shouldIndex ? "index,follow" : "noindex,nofollow"} />
    <meta name="application-name" content={siteName} />
    <meta name="apple-mobile-web-app-title" content={siteName} />
    <meta name="theme-color" content={themeColor} />
    <meta name="color-scheme" content="light" />
    <meta name="author" content={author} />
    {canonical && <link rel="canonical" href={canonical} />}

        <!-- Google Font -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Murecho:wght@100..900&display=swap" rel="stylesheet">

        <!-- Favicon -->
        <meta name="msapplication-square70x70logo" content={`${base}favicon/site-tile-70x70.png`}>
        <meta name="msapplication-square150x150logo" content={`${base}favicon/site-tile-150x150.png`}>
        <meta name="msapplication-wide310x150logo" content={`${base}favicon/site-tile-310x150.png`}>
        <meta name="msapplication-square310x310logo" content={`${base}favicon/site-tile-310x310.png`}>
        <meta name="msapplication-TileColor" content="#0078d7">
        <link rel="shortcut icon" type="image/vnd.microsoft.icon" href={`${base}favicon/favicon.ico`}>
        <link rel="icon" type="image/vnd.microsoft.icon" href={`${base}favicon/favicon.ico`}>
        <link rel="apple-touch-icon" sizes="57x57" href={`${base}favicon/apple-touch-icon-57x57.png`}>
        <link rel="apple-touch-icon" sizes="60x60" href={`${base}favicon/apple-touch-icon-60x60.png`}>
        <link rel="apple-touch-icon" sizes="72x72" href={`${base}favicon/apple-touch-icon-72x72.png`}>
        <link rel="apple-touch-icon" sizes="76x76" href={`${base}favicon/apple-touch-icon-76x76.png`}>
        <link rel="apple-touch-icon" sizes="114x114" href={`${base}favicon/apple-touch-icon-114x114.png`}>
        <link rel="apple-touch-icon" sizes="120x120" href={`${base}favicon/apple-touch-icon-120x120.png`}>
        <link rel="apple-touch-icon" sizes="144x144" href={`${base}favicon/apple-touch-icon-144x144.png`}>
        <link rel="apple-touch-icon" sizes="152x152" href={`${base}favicon/apple-touch-icon-152x152.png`}>
        <link rel="apple-touch-icon" sizes="180x180" href={`${base}favicon/apple-touch-icon-180x180.png`}>
        <link rel="icon" type="image/png" sizes="36x36" href={`${base}favicon/android-chrome-36x36.png`}>
        <link rel="icon" type="image/png" sizes="48x48" href={`${base}favicon/android-chrome-48x48.png`}>
        <link rel="icon" type="image/png" sizes="72x72" href={`${base}favicon/android-chrome-72x72.png`}>
        <link rel="icon" type="image/png" sizes="96x96" href={`${base}favicon/android-chrome-96x96.png`}>
        <link rel="icon" type="image/png" sizes="128x128" href={`${base}favicon/android-chrome-128x128.png`}>
        <link rel="icon" type="image/png" sizes="144x144" href={`${base}favicon/android-chrome-144x144.png`}>
        <link rel="icon" type="image/png" sizes="152x152" href={`${base}favicon/android-chrome-152x152.png`}>
        <link rel="icon" type="image/png" sizes="192x192" href={`${base}favicon/android-chrome-192x192.png`}>
        <link rel="icon" type="image/png" sizes="256x256" href={`${base}favicon/android-chrome-256x256.png`}>
        <link rel="icon" type="image/png" sizes="384x384" href={`${base}favicon/android-chrome-384x384.png`}>
        <link rel="icon" type="image/png" sizes="512x512" href={`${base}favicon/android-chrome-512x512.png`}>
        <link rel="icon" type="image/png" sizes="36x36" href={`${base}favicon/icon-36x36.png`}>
        <link rel="icon" type="image/png" sizes="48x48" href={`${base}favicon/icon-48x48.png`}>
        <link rel="icon" type="image/png" sizes="72x72" href={`${base}favicon/icon-72x72.png`}>
