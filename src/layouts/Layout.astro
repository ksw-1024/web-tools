<style is:global lang="scss">
    :root {
        --text: #111827;
        --text-soft: #374151;
        --muted: #6b7280;
        --border: #d1d5db;
        --border-strong: #9ca3af;
        --card: #ffffff;
        --bg: #f3f4f6;
        --danger: #dc2626;
