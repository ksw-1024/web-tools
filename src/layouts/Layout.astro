        <link rel="icon" type="image/png" sizes="196x196" href={`${base}favicon/icon-196x196.png`}>
        <link rel="icon" type="image/png" sizes="256x256" href={`${base}favicon/icon-256x256.png`}>
        <link rel="icon" type="image/png" sizes="384x384" href={`${base}favicon/icon-384x384.png`}>
        <link rel="icon" type="image/png" sizes="512x512" href={`${base}favicon/icon-512x512.png`}>
        <link rel="icon" type="image/png" sizes="16x16" href={`${base}favicon/icon-16x16.png`}>
        <link rel="icon" type="image/png" sizes="24x24" href={`${base}favicon/icon-24x24.png`}>
        <link rel="icon" type="image/png" sizes="32x32" href={`${base}favicon/icon-32x32.png`}>
        <link rel="manifest" href={`${base}favicon/manifest.json`}>

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        {canonical && <meta property="og:url" content={canonical} />}
        <meta property="og:image" content={socialImage} />
        <meta property="og:site_name" content={siteName} />
        <meta property="og:locale" content="ja_JP" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={socialImage} />
        <meta name="twitter:site" content={twitter} />
        <meta name="twitter:creator" content={twitter} />
	</head>
	<body>
        <slot />
    </body>
</html>

<style is:global lang="scss">
    :root {
        --text: #111827;
        --text-soft: #374151;
        --muted: #6b7280;
        --border: #d1d5db;
        --border-strong: #9ca3af;
        --card: #ffffff;
        --bg: #f3f4f6;
        --danger: #dc2626;
        --accent: #000000;
        --accent-soft: #374151;
    }

    body {
        font-family: 'Murecho', sans-serif;
        background-color: var(--bg);
        color: var(--text);
    }
</style>